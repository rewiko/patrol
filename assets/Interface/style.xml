<nifty-styles>
    <style id="backgroundLayer">
        <attributes childLayout="center" backgroundImage="Interface/Images/ship2.png"/>
    </style>
    <style id="foregroundLayer">
        <attributes backgroundColor="#0f00" childLayout="vertical"/>
    </style>
    <style id="titlePanel">
        <attributes width="100%" height="30%" backgroundColor="#0f00" childLayout="center"/>
        <effect>
            <onStartScreen name="move" mode="in" direction="top" length="800" startDelay="0" inherit="true"/>
            <onEndScreen name="move" mode="out" direction="top" length="300" startDelay="0" inherit="true"/>
        </effect>
    </style>
    <style id="titleText">
        <attributes font="Interface/Fonts/CenturyGothicB32.fnt"/>
    </style>
    <style id="logoPanel">
        <attributes width="100%" height="35%" backgroundColor="#0000" childLayout="center"/>
        <effect>
            <onStartScreen name="move" mode="in" direction="top" length="800" startDelay="0" inherit="true"/>
            <onEndScreen name="move" mode="out" direction="top" length="300" startDelay="0" inherit="true"/>
        </effect>
    </style>
    <style id="logoImage">
        <attributes width="27.5%" height="127%"/><!--127% because parent panel height is 35% of the layer-->
    </style>
    <style id="centeringPanel">
        <attributes width="*" height="*" childLayout="center"/>
    </style>
    <style id="buttonPanel">
        <attributes childLayout="horizontal" width="800px" height="90px" padding="20px" backgroundColor="#fff0"/>
    </style>
    <style id="buttonDiv">
        <attributes height="50px" width="380px" childLayout="center"/>
    </style>
    <style id="button">
        <attributes height="50px" width="200px" backgroundImage="Interface/Images/buttonTexture1.png" childLayout="center" imageMode="resize:24,2,24,24,24,2,24,2,24,2,24,24"/>
    </style>
    <style id="pulsateButton">
        <attributes  height="40px" width="150px" backgroundColor="#fff0" visibleToMouse="true" childLayout="center"/>
    </style>
    <style id="buttonLabel">
        <attributes font="Interface/Fonts/CenturyGothicB20.fnt" color="#000f" backgroundColor="#fff0" align="center" valign="center"/>
    </style>
    <style id="fieldsPanel">
        <attributes childLayout="vertical" align="center" height="40%" width="100%" padding="0px,25%,0px,25%" backgroundColor="#fff0"/>
        <effect>
            <onStartScreen name="move" mode="in" direction="top" length="800" startDelay="0" inherit="true"/>
            <onEndScreen name="move" mode="out" direction="top" length="300" startDelay="0" inherit="true"/>
        </effect>
    </style>
    <style id="fieldsDiv">
        <attributes childLayout="vertical" align="center" backgroundColor="#ff00"/>
    </style>
    <style id="smallFieldsPanel">
        <attributes childLayout="vertical" width="50%" backgroundColor="#f0f0"/>
    </style>
    <style id="singleFieldPanel">
        <attributes childLayout="horizontal" height="60px" width="100%" align="center" padding="20px" backgroundColor="#f000"/>
    </style>
    <style id="fieldLabel">
        <attributes childLayout="center" height="50px" width="200px" backgroundImage="Interface/Images/labelTexture.png" imageMode="resize:24,2,24,24,24,2,24,2,24,2,24,24"/>
    </style>
    <style id="simpleLabel">
        <attributes font="Interface/Fonts/CenturyGothicB20.fnt" color="#000f" backgroundColor="#fff0" align="center" valign="center"/>
    </style>
    <style id="fieldStyle">
        <attributes childLayout="horizontal" width="100%" height="55px" paddingLeft="10px" backgroundColor="#fff0"/>
    </style>
    <!--<style id="myTextField">
        <attributes />
    </style>-->
    <style id="textField">  <!--TODO-->
        <attributes />
    </style>
    <style id="imagePanelLoading">
        <attributes width="100%" height="60%" backgroundColor="#0000" childLayout="center"/>
        <effect>
            <onStartScreen name="move" mode="in" direction="top" length="800" startDelay="0" inherit="true"/>
            <onEndScreen name="move" mode="out" direction="top" length="300" startDelay="0" inherit="true"/>
        </effect>
    </style>
    <style id="imageLoading">
        <attributes width="230px" height="277px"/>
    </style>
    <style id="textPanelLoading">
        <attributes width="100%" height="40%" backgroundColor="#0f00" childLayout="center"/>
        <effect>
            <onStartScreen name="move" mode="in" direction="left" length="800" startDelay="0" inherit="true"/>
            <onEndScreen name="move" mode="out" direction="right" length="300" startDelay="0" inherit="true"/>
        </effect>
    </style>
    <style id="boxPanel">
        <attributes width="600px" height="60px" backgroundColor="#fff0" childLayout="center" backgroundImage="Interface/Images/labelTexture.png" imageMode="resize:24,2,24,24,24,2,24,2,24,2,24,24"/>
    </style>
    <style id="textLoading">
        <attributes font="Interface/Fonts/CenturyGothicB32.fnt" color="#00ff"/>
    </style>
</nifty-styles>