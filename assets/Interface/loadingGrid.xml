<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useStyles filename="Interface/style.xml" />
    <useControls filename="nifty-default-controls.xml" />
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- grid loading screen -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="loadingGrid" controller="it.unipr.ce.dsg.patrol.gui3d.MyScreenController">
        <layer id="background" style="backgroundLayer">
        </layer>
        <layer id="foreground" style="foregroundLayer">
            <panel id="imgContainingPanel" style="imagePanelLoading">
                <image id="imgLoading" filename="Interface/Images/Grid_res.png" style="imageLoading"/>
            </panel>
            <panel id="textContainingPanel" style="textPanelLoading">
                <panel id="boxPanel" style="boxPanel">
                    <text id="textLoading" style="textLoading" text="Initializing grid ..."/>
                </panel>
            </panel>
        </layer>
    </screen>
</nifty>