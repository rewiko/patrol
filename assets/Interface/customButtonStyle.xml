<nifty-styles>
    <!--####################################PULSATING BLUE BUTTON##############################################-->
    <style id="pulsateBlueButton#button">
        <attributes height="50px" width="200px" backgroundImage="Interface/Images/buttonTexture1.png" childLayout="center" imageMode="resize:24,2,24,24,24,2,24,2,24,2,24,24"/>
    </style>
    <style id="pulsateBlueButton#pulsateButton">
        <attributes  height="80%" width="75%" backgroundColor="#fff0" visibleToMouse="true" childLayout="center"/>
        <effect>
            <onHover name="pulsate" scaleFactor="0.008" startColor="#adf0" endColor="#00ff" post="true"/>
        </effect>
    </style>
    <style id="pulsateBlueButton#buttonLabel">
        <attributes font="Interface/Fonts/CenturyGothicB20.fnt" color="#000f" backgroundColor="#fff0" align="center" valign="center" wrap="true" width="100%"/>
    </style>
    <!--####################################SLIDING PULSATING BLUE BUTTON##############################################-->
    <style id="slidingPulsateBlueButton#button">
        <attributes height="50px" width="200px" backgroundImage="Interface/Images/buttonTexture1.png" childLayout="center" imageMode="resize:24,2,24,24,24,2,24,2,24,2,24,24"/>
        <effect>
            <onStartScreen name="move" mode="in" direction="left" length="800" startDelay="0" inherit="true"/>
            <onEndScreen name="move" mode="out" direction="right" length="300" startDelay="0" inherit="true"/>
        </effect>
    </style>
    <style id="slidingPulsateBlueButton#pulsateButton">
        <attributes  height="80%" width="75%" backgroundColor="#fff0" visibleToMouse="true" childLayout="center"/>
        <effect>
            <onHover name="pulsate" scaleFactor="0.008" startColor="#adf0" endColor="#00ff" post="true"/>
        </effect>
    </style>
    <style id="slidingPulsateBlueButton#buttonLabel">
        <attributes font="Interface/Fonts/CenturyGothicB20.fnt" color="#000f" backgroundColor="#fff0" align="center" valign="center" wrap="true" width="100%"/>
    </style>
    <!--####################################PULSATING SQUARE BLUE BUTTON##############################################-->
    <style id="pulsateSquareBlueButton#button">
        <attributes height="50px" width="200px" backgroundImage="Interface/Images/guiButtonTexture.png" childLayout="center" imageMode="resize:24,2,24,24,24,2,24,2,24,2,24,24"/>
    </style>
    <style id="pulsateSquareBlueButton#pulsateButton">
        <attributes  height="80%" width="75%" backgroundColor="#fff0" visibleToMouse="true" childLayout="center"/>
        <effect>
            <onHover name="pulsate" scaleFactor="0.008" startColor="#adf0" endColor="#00ff" post="true"/>
        </effect>
    </style>
    <style id="pulsateSquareBlueButton#buttonLabel">
        <attributes font="Interface/Fonts/CenturyGothicB16.fnt" color="#000f" backgroundColor="#fff0" align="center" valign="center" wrap="true" width="100%"/>
    </style>
    <!--####################################PULSATING CIRCLE BLUE BUTTON##############################################-->
    <style id="pulsateCircleBlueButton#button">
        <attributes height="50px" width="200px" backgroundImage="Interface/Images/guiCircleButtonTexture.png" childLayout="center"/>
    </style>
    <style id="pulsateCircleBlueButton#pulsateButton">
        <attributes  height="80%" width="75%" backgroundColor="#fff0" visibleToMouse="true" childLayout="center"/>
        <effect>
            <onHover name="pulsate" scaleFactor="0.008" startColor="#adf0" endColor="#00ff" post="true"/>
        </effect>
    </style>
    <style id="pulsateCircleBlueButton#buttonLabel">
        <attributes font="Interface/Fonts/CenturyGothicB16.fnt" color="#000f" backgroundColor="#fff0" align="center" valign="center" wrap="true" width="100%"/>
    </style>
</nifty-styles>