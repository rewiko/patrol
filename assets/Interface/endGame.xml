<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useStyles filename="Interface/hudStyle.xml"/>
    <useStyles filename="Interface/customButtonStyle.xml"/>
    <useControls filename="nifty-default-controls.xml" />
    <!--<useControls filename="Interface/customControls.xml"/>-->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- hud screen -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="endGameWin" controller="it.unipr.ce.dsg.patrol.gui3d.MyScreenController">
        <layer id="layer" childLayout="center">
            <panel id="panel" width="50%" height="50%" childLayout="center">
                <control name="pulsateBlueButton" id="endGameButton" text="You Win! Click to Exit" width="50%" height="50%" style="pulsateSquareBlueButton"/>
                <interact onClick="endGame()"/>
            </panel>
        </layer>
    </screen>
    <screen id="endGameLose" controller="it.unipr.ce.dsg.patrol.gui3d.MyScreenController">
        <layer id="layer" childLayout="center">
            <panel id="panel" width="50%" height="50%" childLayout="center">
                <control name="pulsateBlueButton" id="endGameButton" text="You Lose! Click to Exit" width="50%" height="50%" style="pulsateSquareBlueButton"/>
                <interact onClick="endGame()"/>
            </panel>
        </layer>
    </screen>
</nifty>