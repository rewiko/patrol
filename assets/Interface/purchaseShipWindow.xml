<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useStyles filename="Interface/hudStyle.xml"/>
    <useStyles filename="Interface/customButtonStyle.xml"/>
    <useControls filename="nifty-default-controls.xml" />
    <useControls filename="Interface/customControls.xml"/>

    <screen id="purchaseShipWindow" controller="it.unipr.ce.dsg.patrol.gui3d.MyScreenController">
        <layer id="windows" childLayout="center">
            <control id="purchaseShipWin" name="window" title="Purchase Ship Window" width="700px" height="100px" closeable="false">
                <panel id="dummy" childLayout="horizontal">
                    <control name="label" text="Ship: " align="center" valign="center" />
                    <control id="value" name="label" text="1.0" width="50px" align="center" valign="center" />
                    <panel width="10px"/>
                    <control id="slider" name="horizontalSlider" width="150px" min="1.0" max="100.0" initial="1.0" stepSize="1.0" buttonStepSize="1.0"/>
                    <panel width="10px"/>
                    <control name="pulsateBlueButton" id="buyShipButton" text="Buy ship" width="30%" height="60%" style="pulsateSquareBlueButton"/>
                    <interact onClick="buyShipClicked()"/>
                    <control name="pulsateBlueButton" id="cancelButton" text="Cancel" width="30%" height="60%" style="pulsateSquareBlueButton"/>
                    <interact onClick="backToGUI()"/>
                </panel>
            </control>
        </layer>
    </screen>
</nifty>