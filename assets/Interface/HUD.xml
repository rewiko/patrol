<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useStyles filename="Interface/hudStyle.xml"/>
    <useStyles filename="Interface/customButtonStyle.xml"/>
    <useControls filename="nifty-default-controls.xml" />
    <!--<useControls filename="Interface/customControls.xml"/>-->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- hud screen -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="hud" controller="it.unipr.ce.dsg.patrol.gui3d.MyScreenController">
        <layer id="vLayer" style="verticalLayer">
            <panel id="vPanel" style="verticalPanel">
                <panel id="homeTextPanel" style="vDivPanel">
                    <text id="homeText" text="Home Planet" style="guiText"/>
                </panel>
                <panel id="moneyTextPanel" style="vDivPanel">
                    <text id="moneytext" text="Money: ${CALL.getMoney()}" style="guiText"/>
                </panel>
                <panel id="buyShipPanel" style="vDivPanel" childLayout="center">
                    <control name="pulsateBlueButton" id="buyShipButton" text="Buy ship" width="90%" height="60%" style="pulsateSquareBlueButton">
                        <interact onClick="openShipWindowClicked()"/>
                    </control>
                </panel>
                <panel id="buyDefencePanel" style="vDivPanel" childLayout="center">
                    <control name="pulsateBlueButton" id="buyDefenceButton" text="Buy defence" width="90%" height="60%" style="pulsateSquareBlueButton">
                        <interact onClick="openDefenseWindowClicked()"/>
                    </control>
                </panel>
                <panel id="goHomePanel" style="vDivPanel" childLayout="center">
                    <control name="pulsateBlueButton" id="goHomeButton" text="Go To Home" width="90%" height="60%" style="pulsateSquareBlueButton">
                        <interact onClick="homeVisionClicked()"/>
                    </control>
                </panel>
            </panel>
            <!--Notify area-->
            <panel id="notifyPanel" style="horizontalPanel" valign="top" width="40%">
                <panel id="notifyTextPanel" style="aDivPanel">
                    <text id="notifyText" text="Exploring..." style="guiText"/>
                </panel>
            </panel>
        </layer>
        <layer id="hLayer" style="horizontalLayer">
            <panel id="hPanel" style="horizontalPanel">
                <panel id="dummy" style="dummyHPanel">
                </panel>
                <panel id="typeSelTextPanel" style="hDivPanel">
                    <text id="typeText" text="${CALL.getType()}" style="guiText"/>
                    <text id="selText" text="${CALL.getSelection()}" style="guiText"/>
                </panel>
                <panel id="ownerTextPanel" style="hDivPanel">
                    <text id="ownerText" text="${CALL.getOwner()}" style="guiText"/>
                </panel>
                <panel id="defenceCoordTextPanel" style="hDivPanel">
                    <text id="defenceText" text="${CALL.getDefence()}" style="guiText"/>
                    <text id="coordText" text="${CALL.getActualCentralPosition()}" style="guiText"/>
                </panel>
            </panel>
        </layer>
        <layer id="angleLayer" style="angleLayer">
            <panel id="anglePanel" style="anglePanel">
                <panel id="hideShowPanel" style="aDivPanel" childLayout="center">
                    <control name="pulsateBlueButton" id="hideShowButton" text="Hide/ Show" width="75%" height="90%" style="pulsateCircleBlueButton">
                        <interact onClick="toggleHUD()"/>
                    </control>
                </panel>
            </panel>
        </layer>
    </screen>
</nifty>