<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useStyles filename="Interface/style.xml" />
    <useStyles filename="Interface/customButtonStyle.xml"/>
    <useControls filename="nifty-default-controls.xml" />
    <useControls filename="Interface/customControls.xml"/>
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- start screen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="start" controller="mygame.Main">
        <layer id="layer" backgroundColor="#ffff" childLayout="center">
            <panel height="60%" width="100%" childLayout="vertical">
                <panel  childLayout="center" width="100%" height="20%">
                    <panel id="userLabel" style="fieldLabel">
                        <control name="label" text="Username:" style="simpleLabel"/>
                    </panel>
                </panel>
                <panel  childLayout="center" width="100%" height="20%">
                    <panel id="leftDiv" style="buttonDiv">
                        <control name="pulsateBlueButton" id="mybutton" text="Login" style="slidingPulsateBlueButton">
                            <interact onClick="toLogin()"/>
                        </control>
                    </panel>
                </panel> 
                <panel  childLayout="center" width="100%" height="20%">
                    <panel id="buyShipPanel" style="vDivPanel" childLayout="center" width="20%" height="90%">
                        <control name="pulsateBlueButton" id="buyShipButton" text="Buy ship" width="90%" height="60%" style="pulsateSquareBlueButton">
                            <interact onClick="openShipWindowClicked()"/>
                        </control>
                    </panel>
                </panel>
            </panel>
        </layer>
    </screen>
</nifty>
