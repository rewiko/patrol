<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useStyles filename="Interface/style.xml" />
    <useStyles filename="Interface/customButtonStyle.xml"/>
    <useControls filename="nifty-default-controls.xml" />
    <!--<useControls filename="Interface/customControls.xml"/>-->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- start screen -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="start" controller="it.unipr.ce.dsg.patrol.gui3d.MyScreenController">
        <layer id="background" style="backgroundLayer">
        </layer>
        <layer id="foreground" style="foregroundLayer">
            <panel id="titleContainingPanel" style="titlePanel">
                <text id="title" style="titleText" text="P.A.T.R.O.L.'s Space RTS Game"/>
            </panel>
            <panel id="logoContainingPanel" style="logoPanel">
                <image filename="Interface/Images/Logo2_res.png" style="logoImage"/>
            </panel>
            <panel id="centeringPanel" style="centeringPanel">
                <panel id="buttonContainingPanel" style="buttonPanel">
                    <panel id="leftDiv" style="buttonDiv">
                        <control name="pulsateBlueButton" id="mybutton" text="Login" style="slidingPulsateBlueButton"/>
                        <interact onClick="toLogin()"/>
                    </panel>
                    <panel id="rightDiv" style="buttonDiv">
                        <control name="pulsateBlueButton" id="mybutton" text="Exit" style="slidingPulsateBlueButton"/>
                        <interact onClick="quit()"/>
                    </panel> 
                </panel>
            </panel>
        </layer>
    </screen>
</nifty>
