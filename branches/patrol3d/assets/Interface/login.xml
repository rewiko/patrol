<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useStyles filename="Interface/style.xml" />
    <useStyles filename="Interface/customButtonStyle.xml"/>
    <useControls filename="nifty-default-controls.xml" />
    <useControls filename="Interface/customControls.xml"/>
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- login screen -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="loginScreen" controller="it.unipr.ce.dsg.patrol.gui3d.MyScreenController">
        <layer id="background" style="backgroundLayer">
        </layer>
        <layer id="foreground" style="foregroundLayer">
            <panel id="panel_top" style="titlePanel" height="20%"><!--20%-->
                <text text="Login Settings Tab" style="titleText" />
            </panel>    
            <panel id="fieldsPanel" style="fieldsPanel">
                <panel id="panel_user" style="singleFieldPanel">
                    <panel id="userLabel" style="fieldLabel">
                        <control name="label" text="Username:" style="simpleLabel"/>
                    </panel>
                    <panel id="userField" style="fieldStyle">
                        <control id="user" name="textfield" valign="center" height="75%" width="200px" text="${CALL.getUser()}"/>
                    </panel>
                </panel>
                <panel id="panel_pwd" style="singleFieldPanel">
                    <panel id="pwdLabel" style="fieldLabel">
                        <control name="label" text="Password:" style="simpleLabel"/>
                    </panel>
                    <panel id="userField" style="fieldStyle">
                        <control id="pwd" name="textfield" valign="center" height="75%" width="200px" text=""/>
                    </panel>
                </panel>
                <panel id="panel_firstPort" style="singleFieldPanel">
                    <panel id="firstPortLabel" style="fieldLabel">
                        <control name="label" text="My First Port:"  style="simpleLabel"/>
                    </panel>
                    <panel id="userField" style="fieldStyle">
                        <control id="myFirstPort" name="textfield" valign="center" height="75%" width="200px" text="${CALL.getOutPort()}"></control>
                    </panel>
                </panel>
                <panel id="panel_serverIP" style="singleFieldPanel">
                    <panel id="serverIPLabel" style="fieldLabel">
                        <control name="label" text="Server IP Address:" style="simpleLabel"/>
                    </panel>
                    <panel id="userField" style="fieldStyle">
                        <control id="serverIP" name="textfield" valign="center" height="75%" width="200px" text="${CALL.getServerAddress()}"></control>
                    </panel>
                </panel>
                <panel id="panel_serverPort" style="singleFieldPanel">
                    <panel id="serverPortLabel" style="fieldLabel">
                        <control name="label" text="Sever Port Number:"  style="simpleLabel"/>
                    </panel>
                    <panel id="userField" style="fieldStyle">
                        <control id="serverPort" name="textfield" valign="center" height="75%" width="200px" text="${CALL.getServerPort()}"></control>
                    </panel>
                </panel>
                <panel id="panel_messagePort" style="singleFieldPanel">
                    <panel id="messagePortLabel" style="fieldLabel">
                        <control name="label" text="Message Port Number:"  style="simpleLabel"/>
                    </panel>
                    <panel id="userField" style="fieldStyle">
                        <control id="messagePort" name="textfield" valign="center" height="75%" width="200px" text="${CALL.getMessagePort()}"></control>
                    </panel>
                </panel>
            </panel>
            <panel id="centeringPanel" style="centeringPanel" height="60%">
                <panel id="buttonContainingPanel" style="buttonPanel">
                    <panel id="leftDiv" style="buttonDiv">
                        <control name="pulsateBlueButton" id="mybutton" text="Start" style="slidingPulsateBlueButton"/>
                        <interact onClick="startGame()"/>
                    </panel>
                    <panel id="rightDiv" style="buttonDiv">
                        <control name="pulsateBlueButton" id="mybutton" text="Back" style="slidingPulsateBlueButton"/>
                        <interact onClick="back()"/>
                    </panel> 
                </panel>
            </panel>
        </layer>
    </screen>
</nifty>
