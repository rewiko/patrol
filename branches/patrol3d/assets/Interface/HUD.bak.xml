<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    <screen id="start" controller="mygame.MyScreenController">
        <layer id="background" childLayout="center" backgroundImage="Interface/Images/ship2.png">
        </layer>
        <layer id="foreground" backgroundColor="#0f00" childLayout="vertical">
            <panel id="titleContainingPanel" width="100%" height="30%" backgroundColor="#0f00" childLayout="center">
                <text id="title" font="Interface/Fonts/Verdana.fnt" text="P.A.T.R.O.L.'s Space RTS Game"/>
            </panel>
            <panel id="logoContainingPanel" width="100%" height="35%" backgroundColor="#0000" childLayout="center">
                <image filename="Interface/Images/Logo2.png" width="285px" height="332px"/>
            </panel>
            <panel id="buttonContainingPanel" childLayout="horizontal" width="100%" height="35%" backgroundColor="#f000">
                <panel id="leftButton" childLayout="center" width="50%">
                    <control name="button" id="loginButton" label="Login" visibleToMouse="true">
                        <interact onClick="toLogin()"/>
                    </control>
                </panel>
                <panel id="rightButton" childLayout="center" width="50%">
                    <control name="button" id="quitButton" label="Exit" visibleToMouse="true">
                        <interact onClick="quit()"/>
                    </control>
                </panel>
            </panel>
        </layer>
    </screen>
    <screen id="loginScreen" controller="mygame.MyScreenController">
        <layer id="background" childLayout="center" backgroundImage="Interface/Images/ship2.png">
        </layer>
        <layer id="foreground" childLayout="vertical" backgroundColor="#0000">
            <panel id="panel_top" height="35%" width="100%" childLayout="center">  
                <text text="Login Settings Tab" font="Interface/Fonts/Verdana.fnt" fontsize="" width="100%" height="100%" />
        </panel>    
        <panel id="fieldsPanel" childLayout="vertical" align="center" height="30%" width="100%">
            <panel id="fields2" childLayout="horizontal">
                <panel id="panel_userPwd" childLayout="vertical" width="50%">
                    <panel id="panel_user" childLayout="horizontal" height="50%">
                        <control name="label" text="Username:"/>
                        <control id="user" name="textfield" width="200px" text="${CALL.getUser()}" visibleToMouse="true"/>
                    </panel>
                    <panel id="panel_pwd" childLayout="horizontal" height="50%">
                        <control name="label" text="Password:  "/>
                        <control id="pwd" name="textfield" width="200px" text=""></control>
                    </panel>
                </panel>
                <panel id="panel_serverIPPort" childLayout="vertical" width="50%">
                    <panel id="panel_serverIP" childLayout="horizontal" height="50%">
                        <control name="label" text="Server IP Address:   " />
                        <control id="serverIP" name="textfield" width="200px" text="${CALL.getServerAddress()}"></control>
                    </panel>
                    <panel id="panel_serverPort" childLayout="horizontal" height="50%">
                        <control name="label" text="Sever Port Number:"/>
                        <control id="serverPort" name="textfield" width="200px" text="${CALL.getServerPort()}"></control>
                    </panel>
                </panel>
            </panel>
            <panel id="panel_firstPort" childLayout="horizontal">
                <control name="label" text="My First Port:"/>
                <control id="myFirstPort" name="textfield" width="200px" text="${CALL.getOutPort()}"></control>
            </panel>
        </panel>
        <panel id="panel_buttom" align="center" childLayout="horizontal" height="35%" width="100%">
                <panel id="panel_bottom_left" height="50%" width="50%" valign="center" childLayout="center">  
                    <control name="button" label="Start" id="StartButton" align="center" valign="center" visibleToMouse="true"> 
                        <interact onClick="startGame()"/> 
                    </control>
                </panel>
                <panel id="panel_bottom_right" height="50%" width="50%" valign="center" childLayout="center">  
                    <control name="button" label="Back" id="QuitButton" align="center" valign="center" visibleToMouse="true"> 
                        <interact onClick="back()"/>
                    </control>
                </panel>
            </panel>
        </layer>
    </screen>
    <screen id="loading" controller="mygame.MyScreenController">
        <layer id="background" childLayout="center" backgroundImage="Interface/Images/ship2.png">
        </layer>
        <layer id="foreground" childLayout="vertical" backgroundColor="#0000">
            <panel id="imgContainingPanel" width="100%" height="60%" backgroundColor="#0000" childLayout="center">
                <image id="imgLoading" filename="Interface/Images/Logo2.png" width="285px" height="332px"/><!--width="285px" height="332px"-->
            </panel>
            <panel id="textContainingPanel" width="100%" height="40%" backgroundColor="#0f00" childLayout="center">
                <text id="textLoading" font="Interface/Fonts/Verdana.fnt" text="Loading ..."/>
            </panel>
        </layer>
    </screen>
    <screen id="loadingNetwork" controller="mygame.MyScreenController">
        <layer id="background" childLayout="center" backgroundImage="Interface/Images/ship2.png">
        </layer>
        <layer id="foreground" childLayout="vertical" backgroundColor="#0000">
            <panel id="imgContainingPanel" width="100%" height="60%" backgroundColor="#0000" childLayout="center">
                <image id="imgLoading" filename="Interface/Images/Chord_network.png" width="332px" height="332px"/><!--width="285px" height="332px"-->
            </panel>
            <panel id="textContainingPanel" width="100%" height="40%" backgroundColor="#0f00" childLayout="center">
                <text id="textLoading" font="Interface/Fonts/Verdana.fnt" text="Establishing network connection ..."/>
            </panel>
        </layer>
    </screen>
    <screen id="loadingKnowledges" controller="mygame.MyScreenController">
        <layer id="background" childLayout="center" backgroundImage="Interface/Images/ship2.png">
        </layer>
        <layer id="foreground" childLayout="vertical" backgroundColor="#0000">
            <panel id="imgContainingPanel" width="100%" height="60%" backgroundColor="#0000" childLayout="center">
                <image id="imgLoading" filename="Interface/Images/Book-icon.png" width="332px" height="332px"/><!--width="285px" height="332px"-->
            </panel>
            <panel id="textContainingPanel" width="100%" height="40%" backgroundColor="#0f00" childLayout="center">
                <text id="textLoading" font="Interface/Fonts/Verdana.fnt" text="Initializing knowledges ..."/>
            </panel>
        </layer>
    </screen>
    <screen id="loadingTerrain" controller="mygame.MyScreenController">
        <layer id="background" childLayout="center" backgroundImage="Interface/Images/ship2.png">
        </layer>
        <layer id="foreground" childLayout="vertical" backgroundColor="#0000">
            <panel id="imgContainingPanel" width="100%" height="60%" backgroundColor="#0000" childLayout="center">
                <image id="imgLoading" filename="Interface/Images/terrain.png" width="300px" height="300px"/><!--width="285px" height="332px"-->
            </panel>
            <panel id="textContainingPanel" width="100%" height="40%" backgroundColor="#0f00" childLayout="center">
                <text id="textLoading" font="Interface/Fonts/Verdana.fnt" text="Initializing terrain ..."/>
            </panel>
        </layer>
    </screen>
    <screen id="loadingGrid" controller="mygame.MyScreenController">
        <layer id="background" childLayout="center" backgroundImage="Interface/Images/ship2.png">
        </layer>
        <layer id="foreground" childLayout="vertical" backgroundColor="#0000">
            <panel id="imgContainingPanel" width="100%" height="60%" backgroundColor="#0000" childLayout="center">
                <image id="imgLoading" filename="Interface/Images/Grid.png" width="300px" height="300px"/><!--width="285px" height="332px"-->
            </panel>
            <panel id="textContainingPanel" width="100%" height="40%" backgroundColor="#0f00" childLayout="center">
                <text id="textLoading" font="Interface/Fonts/Verdana.fnt" text="Initializing grid ..."/>
            </panel>
        </layer>
    </screen>
    <screen id="loadingLights" controller="mygame.MyScreenController">
        <layer id="background" childLayout="center" backgroundImage="Interface/Images/ship2.png">
        </layer>
        <layer id="foreground" childLayout="vertical" backgroundColor="#0000">
            <panel id="imgContainingPanel" width="100%" height="60%" backgroundColor="#0000" childLayout="center">
                <image id="imgLoading" filename="Interface/Images/light_bulb.png" width="300px" height="300px"/><!--width="285px" height="332px"-->
            </panel>
            <panel id="textContainingPanel" width="100%" height="40%" backgroundColor="#0f00" childLayout="center">
                <text id="textLoading" font="Interface/Fonts/Verdana.fnt" text="Initializing lights ..."/>
            </panel>
        </layer>
    </screen>
    <screen id="loadingHome" controller="mygame.MyScreenController">
        <layer id="background" childLayout="center" backgroundImage="Interface/Images/ship2.png">
        </layer>
        <layer id="foreground" childLayout="vertical" backgroundColor="#0000">
            <panel id="imgContainingPanel" width="100%" height="60%" backgroundColor="#0000" childLayout="center">
                <image id="imgLoading" filename="Interface/Images/Jupiter.png" width="300px" height="300px"/><!--width="285px" height="332px"-->
            </panel>
            <panel id="textContainingPanel" width="100%" height="40%" backgroundColor="#0f00" childLayout="center">
                <text id="textLoading" font="Interface/Fonts/Verdana.fnt" text="Initializing home position of the player ..."/>
            </panel>
        </layer>
    </screen>
    <screen id="loadingKeys" controller="mygame.MyScreenController">
        <layer id="background" childLayout="center" backgroundImage="Interface/Images/ship2.png">
        </layer>
        <layer id="foreground" childLayout="vertical" backgroundColor="#0000">
            <panel id="imgContainingPanel" width="100%" height="60%" backgroundColor="#0000" childLayout="center">
                <image id="imgLoading" filename="Interface/Images/keyboard.png" width="332px" height="332px"/><!--width="285px" height="332px"-->
            </panel>
            <panel id="textContainingPanel" width="100%" height="40%" backgroundColor="#0f00" childLayout="center">
                <text id="textLoading" font="Interface/Fonts/Verdana.fnt" text="Initializing bindings keys ..."/>
            </panel>
        </layer>
    </screen>
    <screen id="hud" controller="mygame.MyScreenController">
        <layer id="layer1" backgroundColor="#0000" childLayout="horizontal">
            <panel id="leftPanel" backgroundColor="#f00f" height="90%" width="10%" valign="top" childLayout="vertical">
                <panel id="v1" width="100%" height="50%" valign="top" childLayout="vertical">
                    <text id="selection" font="Interface/Fonts/Verdana.fnt" text="${CALL.getSelection()}" align="center"/>
                </panel>
            </panel>
        </layer>
        <layer id="layer2" backgroundColor="#0000" childLayout="horizontal">
            <panel id="bottomPanel" backgroundColor="#f00f" height="10%" width="100%" valign="bottom" childLayout="horizontal">
                <panel width="30%" height="100%" valign="top" childLayout="vertical">
                </panel>
                <panel id="1" width="30%" height="100%" valign="top" childLayout="vertical">
                    <text id="actualCenterPosition" font="Interface/Fonts/Verdana.fnt" text="${CALL.getActualCentralPosition()}" align="center"/>
                </panel>
                <panel id="2" width="30%" height="100%" valign="top" childLayout="vertical">
                    <text id="actualCursorPosition" font="Interface/Fonts/Verdana.fnt" text="${CALL.getActualCursorPosition()}" align="center"/>
                </panel>
            </panel>
        </layer>
    </screen>
</nifty>
